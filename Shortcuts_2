conky.config = {
-- Create own window instead of using desktop (required in nautilus)

        own_window = true,
        own_window_type = 'dock',
        own_window_transparent = true,
        own_window_hints = 'undecorated,below,skip_taskbar,skip_pager',-- ,sticky
        own_window_colour = '000000',
        own_window_class = 'Conky',
        own_window_title = 'Sysinfo Conky',

-- ARGB can be used for real transparency
        own_window_argb_visual = true,
-- Valid range is 0-255, where 0 is 0% opacity, and 255 is 100% opacity.
        own_window_argb_value = 0,


        background = true,
        use_xft = true,
        font = '123:size=9',
        xftalpha = 0.1,
        total_run_times = 0,
        double_buffer = true,
        no_buffers = true,
        uppercase = false,
        cpu_avg_samples = 2,
        net_avg_samples = 1,
        override_utf8_locale = true,
        use_spacer = 'left',
        text_buffer_size = 256,
        temperature_unit = 'celsius',
        own_window_colour = '000000',

--shading, outlines and colours

        draw_borders = false,
        draw_graph_borders = false,
        default_color = 'white',
        draw_shades = false,
        default_shade_color = '000000',
        draw_outline = false,
        default_outline_color = 'OliveDrab',

        color2 = '8bffff',--PaleBlue
        color3 = 'white',
        color4 = '8bffff',--PaleBlue

--Size & Alignment
        minimum_width = 330, minimum_height = 5,
        maximum_width = 330,
        alignment = 'top_left',
        gap_x = 670,
        gap_y = 190,
        update_interval = 999.0,

};

function category(name)
        return "${font Noto Sans UI:bold:size=10}${color1}"..name.." ${color2}${hr 2}\n"
end 

function definition (task, shortcut)
        return "${color3}${font Noto Sans UI:size=9}${color3}"..task.." $alignr${color4}"..shortcut.."\n"
end

conky.text =
        [[]]..
        category("DOLPHIN")..
        definition("Toggle Terminal Window",    "F4")..
        definition("Rotate File View",          "F2")..
        definition("Clone Tab",                 "F3")..
        definition("Toggle Information Panel",  "F11")..
        definition("File View",                 "Ctrl-1 Ctrl-2 Ctrl-3")..
        definition("Toggle Hidden Files/Folders", "Alt-.")..
        ("\n")..
        category("APT")..
        definition("Fetch Updates",             "sudo apt update")..
        definition("List Updates",              "apt list --upgradeable")..
        definition("Upgrade Packages",          "sudo apt upgrade")..
        definition("Install Packages",          "sudo apt install package")..
        definition("Remove Packages",           "sudo apt remove package")..
        definition("Completely Remove Packages", "sudo apt purge package")..
        definition("Remove Unused Packages",    "sudo apt autoremove")..
        definition("Search Packages",           "apt search package")..
        definition("List All Packages",         "apt list")..
        definition("List Specific Packages",    "sudo apt list | grep package")..
        definition("List Installed Packages",   "apt list --installed package*")..
        definition("Get Package Details",       "apt show package")..
        definition("Hold Package Upgrade",      "sudo apt-mark hold package")..
        definition("Unhold Package Upgrade",    "sudo apt-mark unhold package")..
        definition("List Held Packages",        "sudo apt-mark showhold package")..
        "\n"..
        category("MISC")..
        definition("Update Font Cache",         "fc-cache -f -v")
;
